# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,js,css}]
indent_size = 4
indent_style = tab

[*.php]
indent_size = 4
indent_style = space

[*.{json,yml,txt,md,sql}]
indent_size = 2
indent_style = space

[*.{xml,xlf,xsd}]
indent_size = 2
indent_style = tab

[*.md]
indent_style = space
indent_size = 4
max_line_length = 80
