# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8

# Get rid of whitespace to avoid diffs with a bunch of EOL changes
trim_trailing_whitespace = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{html,js,css}]
indent_size = 4
indent_style = tab

[*.{php}]
indent_size = 4
indent_style = space

[*.{json,yml,txt,md,sql}]
indent_size = 2
indent_style = space

[*.{xml,xlf,xsd}]
indent_size = 2
indent_style = tab
